<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/alert"
    android:focusable="true"
    android:orientation="horizontal" >

    <!-- Gas station logo -->

    <TextView
        android:id="@+id/popup_header_caption"
        style="@style/popup.header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/slow_down_msg" />

    <TextView
        android:id="@+id/popup_speed"
        style="@style/popup.sub_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/popup_arrow"
        android:layout_toRightOf="@+id/popup_arrow"
        android:layout_weight="0"
        android:padding="0dp"
        android:text="22" />

    <TextView
        android:id="@+id/popup_speed_unit"
        style="@style/popup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/popup_arrow"
        android:layout_alignBottom="@+id/popup_arrow"
        android:layout_margin="0dp"
        android:layout_toRightOf="@+id/popup_speed"
        android:layout_weight="0"
        android:text="@string/measurement_rpm"
        android:textSize="@dimen/popup_normal_text_size" />

    <TextView
        android:id="@+id/popup_alert_message"
        style="@style/popup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/popup_header_caption"
        android:text="@string/high_acceleration"
        android:textSize="@dimen/popup_normal_text_size" />

    <TextView
        android:id="@+id/popup_arrow"
        style="@style/popup.sub_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/popup_alert_message"
        android:layout_weight="0"
        android:text="@string/separator_arrow"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/popup_alert_logo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/alert" />

</RelativeLayout>