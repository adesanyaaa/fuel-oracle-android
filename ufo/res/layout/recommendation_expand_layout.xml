<!-- This is the InnerContent of Expand/Collapse Area -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical" >

    <!-- First Line -->


    <!-- Second Line -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal" >

        <!-- Station Address -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/rec_company_logo"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="fitCenter" />

                <TextView
                    android:id="@+id/rec_fuel_amount"
                    style="@style/card.expand_simple_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:paddingRight="0dp"
                    android:text="82"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/rec_fuel_measurement"
                    style="@style/card.expand_simple_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|left"
                    android:paddingLeft="1dp"
                    android:text="@string/measurement_liter"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/card_arrow"
                    style="@style/card.expand_simple_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|left"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="@string/separator_arrow"
                    android:textSize="50dp" />

                <TextView
                    android:id="@+id/rec_fuel_total_cost"
                    style="@style/card.expand_simple_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:paddingRight="0dp"
                    android:text="321"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/rec_fuel_cost_currency"
                    style="@style/card.expand_simple_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|left"
                    android:paddingLeft="1dp"
                    android:text="@string/currency_dollar"
                    android:textSize="15dp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/rec_station_address"
                    style="@style/card.expand_simple_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:ellipsize="end"
                    android:lines="1"
                    android:paddingRight="0dp"
                    android:text="Default Address"
                    android:textSize="20dp" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/action_button_rectangle_normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginTop="2dp" >

                <TextView
                    android:id="@+id/rec_station_distance"
                    style="@style/card.expand_simple_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:paddingRight="0dp"
                    android:text="5"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/rec_station_distance_measurement"
                    style="@style/card.expand_simple_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:paddingLeft="0dp"
                    android:text="@string/measurement_km"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/rec_navigate_button"
                    style="@style/card_action_button"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="0"
                    android:background="@drawable/action_button_selector"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="@string/navigate"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Third Line -->

</LinearLayout>